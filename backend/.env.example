# App Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# Database
MONGODB_URI=mongodb://localhost:27017/shiporkill
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_ACCESS_SECRET=your-access-secret-jwt-key-at-least-32-characters-long
JWT_REFRESH_SECRET=your-refresh-secret-jwt-key-at-least-32-characters-long
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# Encryption (64 hex characters = 32 bytes)
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Browser-Use Cloud
BROWSER_USE_API_KEY=your-browser-use-api-key-here
